<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a6fca"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="16dp"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:src="@drawable/intro_logo" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="@string/tour_welcome_title_walk"
            android:textColor="#fff"
            android:textSize="24sp"
            android:typeface="sans" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:lineSpacingExtra="1.5dp"
        android:paddingTop="16dp"
        android:text="Indian Messenger is social network cum chat messenger app.\nVia Indian Messenger you can stay connected with your friends and family and can make new friends also.\nIndian Messenger is free, fast, secure, privacy oriented communication platform for whole world."
        android:textColor="#fff"
        android:textSize="18sp"
        android:typeface="sans" />
    <TextView
        android:id="@+id/lets"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:lineSpacingExtra="1.5dp"
        android:paddingTop="8dp"
        android:text="Let's Have Fun!"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:typeface="sans" />


</LinearLayout>