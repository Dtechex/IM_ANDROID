<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a6fca"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/intro_logo"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="Invite Friends"
            android:textColor="#fff"
            android:textSize="24sp"
            android:typeface="sans" />

    </LinearLayout>

    <TextView
        android:id="@+id/invite_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:lineSpacingExtra="1.5dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="0dp"
        android:text="@string/invite_message"
        android:textColor="#fff"
        android:textSize="16sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:lineSpacingExtra="1.5dp"
        android:paddingLeft="16dp"
        android:paddingTop="0dp"
        android:paddingRight="16dp"
        android:paddingBottom="0dp"
        android:text="This app is proudly developed by Indians and this is new app so its our kindly request to support our love towards India and invite your friends at-least on whatsapp."
        android:textColor="#fff"
        android:textSize="16sp"
        android:typeface="sans" />
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/lets"
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:id="@+id/whatsApp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_whatsapp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1.5dp"
            android:paddingLeft="0dp"

            android:text="Share to Whatsapp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:typeface="sans" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:tint="#fff"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_share" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:lineSpacingExtra="1.5dp"
            android:paddingLeft="0dp"

            android:text="Share"
            android:textColor="#fff"
            android:textSize="18sp"
            android:typeface="sans" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>