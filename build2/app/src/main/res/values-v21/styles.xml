<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>
    <style name="myPBStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="colorControlHighlight">@color/primarytext</item>
        <item name="colorControlActivated">@color/primarytext</item>
        <item name="colorControlNormal">@color/primarytext</item>
    </style>

    <!-- custom dialog activity theme -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- removing the dialog's action bar -->
        <item name="windowActionBar">false</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
</resources>